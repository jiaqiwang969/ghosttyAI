using Gtk 4.0;
using Adw 1;

template $GhosttySurfaceTitleDialog: Adw.AlertDialog {
  heading: _("Change Terminal Title");
  body: _("Leave blank to restore the default title.");

  responses [
    cancel: _("Cancel") suggested,
    ok: _("OK") destructive,
  ]

  focus-widget: entry;

  extra-child: Entry entry {};
}
